{
  "printWidth": 88,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "overrides": [
    {
      "files": ["*.js", "*.jsx", "*.css", "*.scss"],
      "options": {
        "singleQuote": true,
        "quoteProps": "as-needed",
        "jsxSingleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "bracketSameLine": false,
        "endOfLine": "lf",
        "arrowParens": "avoid"
      }
    }
  ]
}
